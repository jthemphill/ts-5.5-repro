{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "./src",
    "incremental": true,
    "lib": ["es2021", "dom"],
    "module": "commonjs",
    "moduleResolution": "node",
    "noEmit": true,
    "outDir": "./transpiled",
    "skipLibCheck": true,
    "target": "es2020",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "importHelpers": true
  },
  "files": ["src/test.spec.ts"],
  "include": ["./src/**/*"]
}
